{{!< default}}

{{#tag}}
<header class="tag-header outer">
    <div class="inner">
        <div class="tag-header-content">
            <h1 class="tag-title">{{name}}</h1>
            {{#if description}}
                <h2 class="tag-description">{{description}}</h2>
            {{/if}}
        </div>
    </div>
</header>
{{/tag}}

<main id="site-main" class="site-main outer">
    <div class="inner">
        <div class="post-feed">
            {{!-- The loop partial --}}
            {{#foreach posts}}
                {{> "loop"}}
            {{/foreach}}
        </div>
    </div>
</main>