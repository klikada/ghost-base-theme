{{!< default}}

<main class="content" role="main">
    <div class="inner">
        <section class="signup-form">
            <h1 class="signup-title">Daftar sebagai anggota</h1>
            <p class="signup-description">Dapatkan akses penuh ke konten eksklusif.</p>

            <form data-members-form="signup" class="signup-form-form">
                <input data-members-email type="email" placeholder="Alamat email Anda" required="true" autocomplete="false" />
                <button type="submit">Daftar</button>
            </form>

            <div class="signup-success">
                <h3>Berhasil!</h3>
                <p>Silakan periksa email Anda untuk menyelesaikan pendaftaran.</p>
            </div>
        </section>
    </div>
</main>