{{!< default}}

{{#post}}
<main id="site-main" class="site-main outer">
    <div class="inner">
        <article class="post-full {{post_class}} {{#if feature_image}}has-image{{/if}}">

            <header class="post-full-header">
                <section class="post-full-meta">
                    <time class="post-full-meta-date" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="D MMMM YYYY"}}
                    </time>
                </section>
                <h1 class="post-full-title">{{title}}</h1>
            </header>

            {{#if feature_image}}
                <figure class="post-full-image">
                    <img
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                        sizes="(max-width: 800px) 400px,
                               (max-width: 1170px) 800px,
                               1200px"
                        src="{{img_url feature_image size="xl"}}"
                        alt="{{title}}"
                    />
                </figure>
            {{/if}}

            <section class="post-full-content">
                <div class="post-content">
                    {{content}}
                </div>
            </section>

            {{!-- Tambahan: Navigasi Next/Prev Post --}}
            <nav class="post-navigation">
                {{#prev_post}}
                    <a class="post-nav-prev" href="{{url}}">&larr; {{title}}</a>
                {{/prev_post}}
                {{#next_post}}
                    <a class="post-nav-next" href="{{url}}">{{title}} &rarr;</a>
                {{/next_post}}
            </nav>

            {{!-- Tambahan: Info Penulis --}}
            <footer class="post-footer">
                {{#author}}
                <section class="author-card">
                    <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" />
                    <section class="author-info">
                        <h4>{{name}}</h4>
                        <p>{{bio}}</p>
                    </section>
                </section>
                {{/author}}
            </footer>

        </article>
    </div>
</main>
{{/post}}
