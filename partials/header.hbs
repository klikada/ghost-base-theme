<header class="site-header">
    <div class="site-header-content">
        <div class="site-logo">
            {{#if @site.logo}}
                <a href="{{@site.url}}">
                    <img src="{{@site.logo}}" alt="{{@site.title}}">
                </a>
            {{else}}
                <a href="{{@site.url}}">{{@site.title}}</a>
            {{/if}}
        </div>
        <p class="site-description">{{@site.description}}</p>
    </div>
    {{!-- Navigation Partial --}}
    {{> navigation}}
</header>